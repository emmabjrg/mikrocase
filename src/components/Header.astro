---
import Link from "../components/Link.astro";
---

<div
  x-data="{ showmenu: false }"
  class="p-4 fixed w-full bg-customWhite self-center font-mono"
>
  <div id="navbar" class="flex flex-row justify-between">
    <div id="logo" class="font-black text-2xl uppercase">
      <a href="#link1"
        ><img src="/logo.svg " alt="logo" class="w-64 h-auto" /></a
      >
    </div>
    <nav id="
          desktopmenu" class="hidden lg:block self-center"></nav>
    <ul class="flex flex-row gap-8">
      <li class="hover:text-amber-600 transition duration-300">
        Københavnerbilleder
      </li>
      <li class="hover:text-amber-600 transition duration-300">
        Bogens indhold
      </li>
      <li class="hover:text-amber-600 transition duration-300">Forfatteren</li>
      <li class="hover:text-amber-600 transition duration-300">Bestil bogen</li>
    </ul>
  </div>

  <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu"
  ></button>

  <nav
    id="mobilmenu"
    class="flex flex-col content-center pt-4"
    x-show="showmenu"
    x-transition
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul>
      <li
        class="text-center py-2 border-y-2 hover:text-amber-600 hover:shadow-md transition duration-300"
      >
        <li>Københavnerbilleder</li>
        <li>Bogens indhold</li>
        <li>Forfatteren</li>
        <li>Bestil bogen</li>
      </li>
    </ul>
  </nav>
</div>
